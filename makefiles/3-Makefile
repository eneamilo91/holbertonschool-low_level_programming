CC=gcc
SRC=main.c school.c
OBJ=$(SRC:.c=.o)
NAME=school
RM=rm -f

.PHONY: all clean oclean fclean re

all: $(NAME)

clean:
	$(RM) *~ $(NAME)

oclean:
	$(RM) $(OBJ)

fclean: clean oclean

re: fclean all

$(NAME): $(OBJ)
	$(CC) $^ -o $@

main.o: main.c
	$(CC) -c $< -o $@

school.o: school.c
	$(CC) -c $< -o $@

